<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutFragmentPlayers"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:adjustViewBounds="true"
    android:scaleType="fitCenter"
    android:background="@drawable/radius_bg_4"
    android:layout_marginBottom="10dp"

    >

    <ImageView
        android:id="@+id/imageViewPlayersPlayer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:hapticFeedbackEnabled="true"
        android:tint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_radio_24px"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textPlayersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="idamusik"
        android:textSize="20dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:maxLines="1"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="@id/imageViewPlayersPlayer"
        app:layout_constraintBottom_toBottomOf="@id/imageViewPlayersPlayer"
        app:layout_constraintStart_toEndOf="@id/imageViewPlayersPlayer"/>



</android.support.constraint.ConstraintLayout>
